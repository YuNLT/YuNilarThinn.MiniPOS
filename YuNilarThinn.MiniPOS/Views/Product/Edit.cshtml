@model ProductModel
<form asp-controller="Product" asp-action="Edit" method="post">
    <div class="row mb-3">
        <div>
            <input type="hidden" asp-for="ProductId" />
        </div>
        <div class="col-2">
            <label asp-for="Name">Product Name</label>
        </div>
        <div class="row mb-3">
            <input asp-for="Name" type="text" class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="Price">Product Price</label>
        </div>
        <div class="row mb-3">
            <input asp-for="Price" type="text" class="form-control" />
        </div>
        <input type="submit" value="Save" class="btn-secondary" />
    </div>
</form>
