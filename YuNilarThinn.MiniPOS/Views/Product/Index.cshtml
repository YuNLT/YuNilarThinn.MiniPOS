@model ProducatListModel

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Edit
                </th>
            </tr>
            
        </thead>
        <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>
                    </td>
                    </tr>
                }
        </tbody>
    </table>
</div>
<div>
    <a asp-controller="Product" asp-action="Create" class="btn btn-success">Create</a>
</div>
