@model CustomerModel

<form asp-controller="Customer" asp-action="Edit" method="post">
    <div class="row mb-3">
        <div>
            <input type="hidden" asp-for="CustomerId" />
        </div>
        <div class="col-2">
            <label asp-for="CustomerCode"> Customer Code</label>
        </div>
        <div class="row mb-3">
            <input asp-for="CustomerCode" type="text" class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="CustomerName">Customer Name</label>
        </div>
        <div class="row mb-3">
            <input asp-for="CustomerName" type="text" class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="Address">Address</label>
        </div>
        <div class="row mb-3">
            <input asp-for="Address" type="text" class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="PhoneNo">Product Price</label>
        </div>
        <div class="row mb-3">
            <input asp-for="PhoneNo" type="text" class="form-control" />
        </div>
        <input type="submit" value="Save" class="btn-secondary" />
    </div>
</form>
