@model CustomerModel

<div>
    <form asp-controller="customer" asp-action="Create" method="post">
        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="CustomerName">Customer Name</label>
            </div>
            <div class="row mb-3">
                <input asp-for="CustomerName" type="text" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="PhoneNo">Phone No</label>
            </div>
            <div class="row mb-3">
                <input asp-for="PhoneNo" type="text" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Address">Address</label>
            </div>
            <div class="row mb-3">
                <input asp-for="Address" type="text" class="form-control" />
            </div>
            <input type="submit" value="Create" class="btn-primary" />
        </div>
    </form>
</div>